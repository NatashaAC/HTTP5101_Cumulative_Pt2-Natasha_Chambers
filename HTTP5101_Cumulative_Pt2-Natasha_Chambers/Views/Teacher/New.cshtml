
@{
    ViewBag.Title = "New";
}

<nav>
    <a class="navLink" href="/Teacher/List">Back to Teacher List</a>
</nav>

<h2>New Teacher</h2>

<form method="POST" action="/Teacher/Create" onsubmit="validateTeacherForm();">
    <div class="teacherInput">
        <label for="teacherfname">First Name:</label>
        <input type="text" id="teacherfname" name="teacherfname" />
    </div>
    <div class="teacherInput">
        <label for="teacherlname">Last Name:</label>
        <input type="text" id="teacherlname" name="teacherlname"/>
    </div>
    <div class="teacherInput">
        <label for="employeenumber">Employee Number:</label>
        <input type="text" id="employeenumber" name="employeenumber"/>
    </div>
    <div class="teacherInput">
        <label for="hiredate">Hire Date:</label>
        <input type="date" id="hiredate" name="hiredate"/>
    </div>
    <div class="teacherInput">
        <label for="salary">Salary:</label>
        <input type="text" id="salary" name="salary"/>
    </div>
    <div>
        <button type="submit">Add Teacher</button>
    </div>
</form>

<script>
    function validateTeacherForm() {
        var firstName = document.getElementById("teacherfname").value;

        if (firstName == "") {
            alert("first name field can not be blank");
            return false;
        } else {
            return true;
        }
    }
</script>